# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/maintenance_db

# Session Security
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Replit Authentication (OpenID Connect)
ISSUER_URL=https://replit.com/oidc
REPL_ID=your-replit-client-id
REPLIT_DOMAINS=your-app.replit.app,custom-domain.com

# Optional: Custom Domain Configuration
COOKIE_DOMAIN=.your-domain.com
ALLOWED_ORIGINS=https://your-frontend.com,https://admin.your-domain.com

# Environment
NODE_ENV=development
PORT=5000

# Optional: Application Settings
LOG_LEVEL=info
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100